<style type="text/css">
body {
    background-image: url('http://www.highresolution-wallpapers.com/walls/high_res_sea_shore_in_thailand_and_canoe-wide.jpg');
    background-repeat:no-repeat;
    background-size: cover;
    background-color: #dcc786;
}

.register-box{
    background-color: #ffffff ;
    border: 1px solid white;
    border-radius:5px;
    padding: 10px 15px 10px 15px;
    margin-top: 20px;

}
@media (max-width: 991px) {
  .register-box{
    margin: 30px 0 0 0 !important;
    padding: 10px 15px 50px 10px !important;
  }
}

h1   {color:white !important}
h2   {color:white !important}
h3   {color:white !important}
p    {
    margin-right:10px;
    margin-bottom: 10px;
}
</style>
<div class="col-md-5 text-center">
    <h1 style="font-size: 6em"><span class="glyphicon glyphicon-send"> </span></h1>
    <h2>Thanks for signing up!</h2>
</div>
<div class="col-md-5 register-box" style="clear: both;">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group"><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: 'form-control' %></div>

  <div class="form-group"><%= f.label :name %><br />
  <%= f.text_field :name, class: 'form-control' %></div>

  <div class="form-group"><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %></div>

  <div class="form-group"><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %></div>

  <span class="pull-left"><%= render "devise/shared/links" %></span>
  <span class="pull-right"><%= f.button "Sign Up", class: 'btn btn-primary' %></span>

<% end %>
</div>