<h1>Listing photos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Trip</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.user.name %></td>
        <td><%= photo.trip.title %></td>
        <td><%= photo.address %></td>
        <td><%= photo.latitude %></td>
        <td><%= photo.longitude %></td>
        <td><%= photo.title %></td>
        <td><%= photo.description %></td>
        <td><%= link_to 'Show', photo %>
          <% if signed_in? && current_user == photo.user %>
            <%= link_to 'Edit', edit_photo_path(photo) %>
            <%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<a href="<%= new_photo_path %>"><button class="btn btn-success btn-lg">Add a new photo</button></a>
