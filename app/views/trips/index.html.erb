<h1>Listing trips</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.user.name %></td>
        <td><%= trip.title %></td>
        <td><%= trip.description %></td>
        <td><%= link_to 'Show', trip %>
          <% if signed_in? && current_user == trip.user %>
            <%= link_to 'Edit', edit_trip_path(trip) %>
            <%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<a href="<%= new_trip_path %>"><button class="btn btn-success btn-lg">Create a new trip</button></a>
